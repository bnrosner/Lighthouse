<div class="row">
  <div class="col-md-12">
    <h3 class="page-header"><center> 
      <font size="6">Become a Tutor at <%=current_user.school.name%></font>
    </center></h3>
  </div>
</div>

<%= form_for @tutor do |form| %>
<div class = "container">
  <div class="row">
  	<div class="col-md-4"></div>
  	<div class="col-md-4">
          
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Tutor</div>
      </div>     

      <div style="padding-top:5px" class="panel-body" >
      <!-- <div style="margin-bottom: 55px" class="input-group"> -->
      <%= form.label :course_id %>
	    <%= form.collection_select(:course_id, @courses, :id, :name, {}, {class: "form-control"})%>
	    <p></p>
	    <%= form.label :available %>
	    <%= form.check_box :available %>

	    <div style="margin-top:25px" class="form-group">
	      <%= form.submit class: "btn btn-lg btn-primary btn-block" %>
	    </div>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>