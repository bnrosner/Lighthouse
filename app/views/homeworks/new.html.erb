<% if @homework.errors.any? %>
  <div class="alert alert-warning" role="alert">
    <% @homework.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  </div>
<% end %>

<%= form_for [@course, @homework] do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div>
    <%= form.label :course_id %>
    <%= form.collection_select(:course_id, @courses, :id, :name, {}, {class: "form-control"})%>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>
  <%= form.button 'Post Your Review', class: "btn btn-success" %>
<% end %>


Homework:
  name: string
  course_id: integer
  num_questions: integer
  current: boolean