<%= form_for @course do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
    <%= form.label :course_number %>
    <%= form.text_field :course_number, class: "form-control" %>
    <%= form.label :school_id %>
    <%= form.collection_select(:school_id, School.all, :id, :name, {}, {class: "form-control"})%>
  </div>
  <%= form.button 'Update Class', class: "btn btn-success" %>
<% end %>