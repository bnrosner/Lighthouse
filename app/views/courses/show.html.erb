<h1><%=@course.name%> at <%=@course.school.name%></h1>
        
<h3>Available Tutors:</h3>
<% @course.tutors.each do |tutor| %>
  <p>
    <% if tutor.available %>
      <%= link_to tutor.user.try(:name), tutor_url(tutor) %>
    <% end %>
  </p>
<%end%>

<p></p>
<h3>Available Students:</h3>
<% @course.students.each do |student| %>
	<p>
    <% if student.available %>
	  	<%=student.user.try(:name)%>
	  <% end %>
	</p>
<%end%>