<h3 class="page-header">
  All Schools
  <span class="pull-right">
    <p><%= link_to "New School", new_school_path, class: 'btn btn-sm btn-success' %></p>
  </span>
</h3>

<ul>
  <% @schools.each do |school| %>
    <li>
      <%= link_to school.name, school_url(school)%>
      <%= link_to "Edit", edit_school_url(school) %>
      <%= link_to "Delete", school_url(school), method:  :delete, class:"btn btn-sm btn-danger", data: {confirm: "Seriously?"} %>
    </li>
  <% end %>
</ul>