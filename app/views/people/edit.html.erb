<%= form_for @person do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
	  <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control" %>
    <%= form.label :graduation_year %>
    <%= form.text_field :graduation_year, class: "form-control" %>
    <%= form.label :school_id %>
    <%= form.collection_select(:school_id, School.all, :id, :name, {}, {class: "form-control"})%>
  </div>
  <%= form.button 'Update Person', class: "btn btn-success" %>
<% end %>