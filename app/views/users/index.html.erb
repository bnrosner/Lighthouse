<h3 class="page-header">
  All Users
  <span class="pull-right">
    <p><%= link_to "New User", new_user_path, class: 'btn btn-sm btn-info' %></p>
  </span>
</h3>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user_url(user)%>
      <%= link_to "Edit", edit_user_url(user), class:"btn btn-sm btn-default" %>
      <%= link_to "Delete", user_url(user), method:  :delete, class:"btn btn-sm btn-danger", data: {confirm: "Seriously?"} %>
    </li>
  <% end %>
</ul>