<%= form_for @user do |form| %>
<div class = "container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    

  <%= render "shared/alert" %>

    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Personal Info</div>
      </div>     

      <div style="padding-top:30px" class="panel-body" >
                                    
      <%= form_tag new_user_url, class: "form-signin" do %>
      <div style="margin-bottom: 25px" class="input-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
        
      <div style="margin-bottom: 25px" class="input-group">
        <%= form.label :graduation_year %>
        <%= form.text_field :graduation_year, class: "form-control" %>
      </div>

      <div style="margin-bottom: 25px" class="input-group">
        <%= form.label :school_id %>
        <%= form.collection_select(:school_id, School.all, :id, :name, {}, {class: "form-control"})%>
      </div>

      <div style="margin-bottom: 25px" class="input-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div style="margin-bottom: 25px" class="input-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control" %>
      </div>
                                
      <div style="margin-top:10px" class="form-group">
        <!-- Button -->
        <div class="col-sm-12 controls">
          <%= form.submit class: "btn btn-lg btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<%end%>